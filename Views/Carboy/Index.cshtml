@model List<LMS.Carboys>

@{
    ViewBag.Title = "Carboy Index";

    string searchKey = ViewBag.SearchKey != null ? ViewBag.SearchKey : "";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-gray">
            <div class="panel-heading">
                <h4>Damacana Listesi</h4>
                <div class="options">
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="input-group">
                        <input type="text" id="Name" name="Name" value="@searchKey" placeholder="Damacana Ara..." class="form-control">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                }
                <hr />
                <a href="/Carboy/Create" class="btn btn-danger"><i class="fa fa-plus"></i> Yeni Damacana</a>
                <hr />
                <table class="table table-striped table-advance table-hover mailbox">
                    <thead>
                        <tr>
                            <th width="5%"><span><input type="checkbox"></span></th>
                            <th><span>Damacana Adı</span></th>
                            <th><span>Damacana Türü</span></th>
                            <th><span>Damacana X</span></th>
                            <th><span>Damacana Y</span></th>
                            <th><span>Damacana Adres</span></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr class="unread">
                                <td><span><input type="checkbox"></span></td>
                                <td><a href="/Carboy/Edit/@item.CarboyId"> @item.CarboyName</a></td>
                                <td>@item.CarboySpecies</td>
                                <td>@item.CarboyX</td>
                                <td>@item.CarboyY</td>
                                <td>@item.CarboyAddress</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

